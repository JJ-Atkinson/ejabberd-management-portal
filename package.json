{
  "name": "ejabberd-management-portal",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "build:css": "tailwindcss -i ./resources/css/input.css -o ./resources/public/css/output.css",
    "watch:css": "tailwindcss -i ./resources/css/input.css -o ./resources/public/css/output.css --watch --content './src/**/*.{clj,cljs,cljc}'",
    "build:js": "rollup -c",
    "watch:js": "rollup -c --watch"
  },
  "devDependencies": {
    "@multiplyco/tailwind-clj": "^1.0.3",
    "@rollup/plugin-commonjs": "^28.0.8",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-terser": "^0.4.4",
    "rollup": "^4.52.5",
    "tailwindcss": "^3.4.1"
  },
  "dependencies": {
    "@floating-ui/dom": "^1.7.4",
    "htmx.org": "^2.0.7",
    "hyperscript.org": "^0.9.14"
  }
}
